{
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@openapitools/openapi-generator-cli": "^2.24.0",
    "@redocly/cli": "^2.5.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.1",
    "@types/sqlite3": "^3.1.11",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "swagger-ui-dist": "^5.29.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "scripts": {
  "dev": "ts-node-dev --respawn src/index.ts",
  "dev:old": "ts-node-dev --respawn src/server.ts",
  "db:reset": "node -e \"require('fs').rmSync('backend/db/data.sqlite',{force:true}); process.exit(0)\" && ts-node src/index.ts",
  "build": "tsc -p .",
  "start": "node dist/index.js",
  "openapi:check": "npx swagger-cli validate openapi.yaml",
  "openapi:lint": "npx redocly lint openapi.yaml",
  "openapi:preview": "npx redocly@latest preview-docs ./openapi.yaml -p 8081"
  }
}
